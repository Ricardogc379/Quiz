<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#024a4e">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="QUIZ GAME"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="50dp"
        android:paddingBottom="15dp"
        android:paddingTop="20dp"
        android:textColor="#ffffff"/>

    <TextView
        android:id="@+id/tituloCategoria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nome Categoria"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#5efe93"/>
    <ImageView
        android:id="@+id/certo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/checkmark"
        android:layout_marginTop="35dp" />

    <TextView
        android:id="@+id/resultado"
        android:paddingTop="15dp"
        android:textSize="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#ffffff"/>

    <TextView
        android:paddingTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Resposta"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#ffffff"/>

    <TextView
        android:id="@+id/respostaCorreta"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nullam tempor neque."
        android:textAlignment="center"
        android:textColor="#58f214"/>

</LinearLayout>
